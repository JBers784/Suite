                                        <td><strong>Dias</strong></td>
                                        <td><strong>Importe</strong></td>
                                        @if (vaca == "none")
                                        {
                                            <td></td>
                                            <td><strong>Días</strong></td>
                                            <td><strong>Importe</strong></td>
                                        }
                                        else
                                        {

                                            <td><strong>H.Trab</strong></td>
                                            <td><strong>Tarifa</strong></td>
