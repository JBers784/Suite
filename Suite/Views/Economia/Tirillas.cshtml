                                        if (!item.RecibPago.ToLower().Contains("vaca"))
                                        {
                                            vaca = "";
                                        }
                                        else
                                        {
                                            vaca = "none";
                                        }


                                    <tr>
                                        <td colspan="3"><strong>Acum. Vacaciones:   </strong></td>
