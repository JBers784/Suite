                                        <td>@item.Reporte</td>

                                        <td colspan=" 2"><strong>Corte:</strong></td>
                                        <td>@item.Corte</td>

                                        <td><strong>Mes:</strong></td>
                                        <td>@item.Mes</td>

                                        <td colspan=" 2"><strong>Año:</strong></td>
                                        <td>@item.Anno</td>

                                    </tr>
                                    <tr>
                                        <td colspan="2"><strong>Centro de pago:   </strong></td>

                                        <td colspan="15">@item.CentroPago</td>

                                    </tr>
