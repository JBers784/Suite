@model Suite.Models.Produccion.Prodgas

@{
    ViewBag.Title = "Entrega de gas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ProdGas", "Produccion", FormMethod.Post, new { @class = "form-group total-ads main-grid-border" }))
{
    <div class="select-box abs-center">
        <div class="search-product ads-list">
            <label>Fecha: <span style="color:red;font-weight:bold">(@ViewBag.fechadefiltro) </span></label>
            <div class="search">
                <div id="custom-search-input">
                    <div class="input-group">
                        @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

}
<ol class="breadcrumb" style="margin-bottom: 5px;">
    <li><a href="@Url.Action("Index", "Home")">Inicio</a></li>
    <li><a href="@Url.Action("Modulos", "Home")#parentVerticalTab3">Módulos</a></li>
    <li class="active">Entrega de Gas</li>
</ol>
<div class="container ">
    @*EPEP-Centro*@
    <div class="panel panel-success col-md-6">
        <div class="panel-heading text-center"><h3 class="text-uppercase" style="font-weight:bold">UEB de Producción Centro</h3></div>
        <div class="panel-body">
            <table class="table table-responsive table-hover">
                @*Encabezados*@
